{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug (Windows MSVC)",
            "type": "cppvsdbg",
            "request": "launch",
            "program":  "${workspaceFolder}/zig-out/bin/XfitTest.exe",
            "cwd": "${workspaceFolder}/assets",
            "console": "integratedTerminal",
            "preLaunchTask": "build zig"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug (Linux)",
            "program": "${workspaceFolder}/zig-out/bin/XfitTest",
            "args": [],
            "cwd": "${workspaceFolder}/assets",
            "preLaunchTask": "build zig",
        },
        //Use CodeLLDB and Android Debug https://marketplace.visualstudio.com/items?itemName=nisargjhaveri.android-debug
        {
            "name": "Android",
            "type": "android-debug",
            "request": "launch",
            "target": "select",
            "mode": "native", // Change to `java` or `native` to attach only Java or Native debugger.
            "packageName": "com.example.xfittest", // Package name for your app. manifest.package
            "launchActivity": "android.app.NativeActivity",  // Activity to launch
            "preLaunchTask": "build zig",
            "native": {
                "abiSupported": ["arm64-v8a", "riscv64", "x86_64"],
                "abiMap": {
                    "arm64-v8a": "arm64-v8a",
                    "riscv64": "riscv64",
                    "x86_64": "x86_64",
                },
                "symbolSearchPaths": ["${workspaceFolder}/lib/${command:abi}/"]
            },
            "apkPath": "${workspaceFolder}/zig-out/signed.apk",
        },
        {
            "name": "Android Attach",
            "type": "android-debug",
            "request": "attach",
            "target": "select",
            "mode": "native", // Change to `java` or `native` to attach only Java or Native debugger.
            "pid": "${command:pickAndroidProcess}",
            "packageName": "com.example.xfittest", // Package name for your app. manifest.package
            "native": {
                "abiSupported": ["arm64-v8a", "riscv64", "x86_64"],
                "abiMap": {
                    "arm64-v8a": "arm64-v8a",
                    "riscv64": "riscv64",
                    "x86_64": "x86_64",
                },
                "symbolSearchPaths": ["${workspaceFolder}/lib/${command:abi}/"]
            },
        }
    ]
}